<h1>My Major List of Too Many To-Do's</h1>


<%if @tasks.any? %>
	<% @tasks.each do |task|%>
<%if task.archived != 1%>
    <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-8">
        <h1><%=task.title %></h1>
      </div>
      <div class="col-sm-2"></div>
      	<button class = "btn btn-info archive" data-id= "<%=task.id%>">
      	Archive </button>
      <div class="col-sm-12">
        <%= task.description %>
      </div>
    	</div>
		<%end %>
	<%end%>
<%end%>

